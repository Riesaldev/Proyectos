---
import KeepScrolling from '@/assets/keep-scrolling.svg';
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta
			name="viewport"
			content="width=device-width"
		/>
		<link
			rel="icon"
			type="image/svg+xml"
			href="/logo-stack.svg"
		/>
		<meta
			name="generator"
			content={Astro.generator}
		/>
		<title>Landing GTA VI</title>
	</head>
	<body>
		<slot />
		<KeepScrolling
			class="fixed right-0 left-0 mx-auto bottom-3 text-pink-300 drop-shadow-2xl animate-bounce-pulse"
		/>
	</body>
</html>

<style is:global>
	@import 'tailwindcss';

	@theme {
		--font-sans: 'GTA', system-ui, sans-serif;
		--font-narrow: 'GTANarrow', system-ui, sans-serif;

		--animate-bounce-pulse: bounce-pulse 2s ease-in-out infinite;
	}

	@keyframes bounce-pulse {
		0%,
		100% {
			transform: translateY(0);
			scale: 0.8;
			opacity: 0.8;
		}
		50% {
			transform: translateY(-5px);
			scale: 1;
			opacity: 1;
		}
	}
	
	html,
	body {
		@apply text-white bg-gray-900 m-0 p-0 w-full overflow-x-hidden;
		font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
		box-sizing: content-box;
		height: 300vh;
		overscroll-behavior: none;
	}
</style>

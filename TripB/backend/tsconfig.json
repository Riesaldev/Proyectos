{

  "compilerOptions": {

    "target": "es2020",

    "module": "NodeNext",

    "moduleResolution": "NodeNext",

    "esModuleInterop": true,

    "allowSyntheticDefaultImports": true,

    "strict": true,

    "skipLibCheck": true,

    "forceConsistentCasingInFileNames": true,

    "resolveJsonModule": true,

    "outDir": "./dist",

    "rootDir": "./",

    "types": ["node"],

    "noEmit": true,

    "allowImportingTsExtensions": true

  },

  "include": ["**/*.ts"],

  "exclude": ["node_modules", "dist"]

}
